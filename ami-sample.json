
{
  "variables": {
      "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
      "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },  
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{user `AWS_SECRET_ACCESS_KEY`}}",
    "region": "us-east-1",
    "source_ami": "ami-cd0f5cb6",
    "instance_type": "t2.micro",
    "subnet_id": "subnet-b8fc7adc",
    "ssh_username": "ubuntu",
    "ami_name": "packer-ami {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 20",
        "sudo /usr/bin/apt-get update -y",
        "sudo /usr/bin/apt-get install python-simplejson -y",
        "sudo /usr/bin/apt-get -y install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "/etc/ansible/playbooks/sample.yml",
       "role_paths": "/etc/ansible/roles/user.sample/"
    }
  ]
}
